@inherits LayoutComponentBase

<MudLayout>
    <MudAppBar>
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@ToggleDrawer" />
        <MudSpacer />
        <LoginDisplay />
    </MudAppBar>
    <MudDrawer @bind-Open="@open" Elevation="4">
        <MudText Typo="Typo.h6" Class="px-4 py-4" Color="Color.Primary"> Assignment Manager </MudText>
        <MudDivider Class="mb-2" />
        <NavMenu />
        <MudSpacer />
        <MudButton StartIcon="@Icons.Custom.Brands.GitHub" Class="mb-4" Color="Color.Inherit" Link="https://github.com/FrediKats/AssignmentManager" Target="_blank">GitHub</MudButton>
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Medium" Class="py-8">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>


@code{
    bool open = true;

    void ToggleDrawer()
    {
        open = !open;
    }
}