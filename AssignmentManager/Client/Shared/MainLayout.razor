@inherits LayoutComponentBase

<MudLayout>
    <MudAppBar>
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@ToggleDrawer" />
        <MudSpacer />
        <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="Color.Inherit" Link="https://github.com/FrediKats/AssignmentManager" Target="_blank" />
    </MudAppBar>
    <MudDrawer @bind-Open="@open">
        <MudText Typo="Typo.h6" Class="px-4 py-4"> Assignment Manager </MudText>
        <MudDivider Class="mb-2" />
        <NavMenu />
    </MudDrawer>
    <MudMainContent Class="pt-16 px-16">
        <MudContainer MaxWidth="MaxWidth.Medium">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>


@code{
    bool open = false;

    void ToggleDrawer()
    {
        open = !open;
    }
}