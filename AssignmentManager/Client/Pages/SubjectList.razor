@using AssignmentManager.Shared
<MudPaper Class="mt-4 d-flex flex-column px-4" Style="max-height:600px; overflow:scroll;">
    <MudList Clickable="true">
        <MudListSubheader>
            <MudText Typo="Typo.h5">@ListTitle</MudText>
        </MudListSubheader>
        @foreach (var subject in SubjectsArray)
        {
            var href = "subject/" + subject.SubjectId;
            <MudListItem Href="@href" Text="@subject.SubjectName" Avatar="@Icons.Material.Filled.Subject"/>
        }
    </MudList>
</MudPaper>

@code {
    [Parameter]
    public IList<SubjectResourceBriefly> SubjectsArray { get; set; }
    [Parameter]
    public string ListTitle { get; set; } = "Предметы";

}