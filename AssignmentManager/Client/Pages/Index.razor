@page "/"
@using MudBlazor

<h1>Hello, world!</h1>

Welcome to your new app.

<SurveyPrompt Title="How is Blazor working for you?" />

<MudText Typo="Typo.h6">Next Random number is @Numb</MudText>
<MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="OnButtonsClick">@ButtonText</MudButton>
<MudButton Variant="Variant.Outlined" Color="Color.Primary" OnClick="OnButtonsClick">@ButtonText</MudButton>
<MudButton Variant="Variant.Text" Color="Color.Primary" OnClick="OnButtonsClick">@ButtonText</MudButton>
@code {
    public int Numb { get; set; } = 0;
    public string ButtonText { get; set; } = "Click Me";
    private Random _rand = new Random();
    void OnButtonsClick()
    {
        Numb = _rand.Next();
    }
}